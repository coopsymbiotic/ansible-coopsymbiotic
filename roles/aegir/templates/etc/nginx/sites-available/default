# {{ ansible_managed }}
#
# Default vhost to avoid situations where a DNS entry points to the wrong server
# or the site has been deleted, and now nginx responds with the first valid vhost
# alphabetically, causing much confusion to users.
server {
        listen 80 default_server;
        listen [::]:80 default_server;

        listen 443 ssl default_server;
        listen [::]:443 ssl default_server;

        # Self signed certs generated by the ssl-cert package
        include snippets/snakeoil.conf;

        root /var/www/html;
        server_name _;
        return 404;
}
